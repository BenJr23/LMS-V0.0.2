generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}



model Student {
  lrn          String   @id                      // DepEd Learner Reference Number as primary key
  firstName    String
  lastName     String
  middleName   String?
  email        String   @unique
  passwordHash String
  gradeLevel   String
  section      String
  gender       String
  dateOfBirth  DateTime
  profileImage String?                          // optional URL or path to profile photo
  status       String                           // e.g., Active, Dropped, Graduated
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}